
<%= render partial: 'layouts/sidebar', locals: { book:@book, user:@user} %>

<div class='row'>
  <div class='col-xs-5'>
      <table class='table'>
         Book detail
      <thead>
        <tr>
          <th colspan="5"></th>
        </tr>
      </thead>

    <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, size:10*5, fallback: "no_image.jpg" %>
            <% end %>
            <br>
            <%= link_to @user.name, user_path(@user) %>
          </td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
          <% if current_user.id == @user.id %>
            <td><%= link_to 'Edit', "/books/#{@books.id}/edit" %></td>
            <td><%= link_to 'Destroy',book_path(@books.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><br></td>
        </tr>
        <% else %>
      <% end %>
    </tbody>
  </table>
</div>
</div>