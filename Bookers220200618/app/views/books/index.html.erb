
<div>
    <% if @book.errors.any? %>
      <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
</div>

<%= render partial: 'layouts/sidebar', locals: { book:@book, user:@user} %>

<div class='row'>
  <div class='col-xs-5'>
        <table class='table'>
    Books
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="1"></th>
        </tr>
      </thead>


    <tbody>
        <% @books.each do |list| %>
        <% @users = list.user %>
        <tr>
          <td>
            <%= link_to user_path(@users) do %>
            <%= attachment_image_tag @users, :profile_image, size:10*5, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= list.user.name %></td>
          <td><%= link_to list.title, book_path(list.id) %></td>
          <td><%= list.body %></td>
          <td><br></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>