
<%= render partial: 'layouts/sidebar', locals: { book:@book, user:@user} %>

<div class='row'>
  <div class='col-xs-5'>
        <table class='table'>
    <h2>Book detail</h2>
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |list| %>
        <tr>
          <td>
            <%= link_to user_path(list) do %>
            <%= attachment_image_tag list, :profile_image, size:10*5, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= list.name %></td>
          <td><%= link_to 'Show', "/users/#{list.id}" %></td>
          <td><br></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>