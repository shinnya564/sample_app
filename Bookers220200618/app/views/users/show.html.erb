
<%= render partial: 'layouts/sidebar', locals: { book:@book, user:@user} %>

<div class='row'>
  <div class='col-xs-5'>
        <table class='table'>
          <h2>Books</h2>
        	<thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
	        	<% @user.books.each do |list| %>
    	      		<tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, size:10*5, fallback: "no_image.jpg" %>
                    <% end %>
                  </td>
	        	    	<td><%= link_to list.title,book_path(list.id) %>
                  </td>
	            		<td><%= list.body %></td>
		          	</tr>
	        	<% end %>
	        </tbody>
        </table>
</div>
</div>